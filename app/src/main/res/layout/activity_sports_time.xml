<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportsTime">

    <TextView
        android:id="@+id/btnMax"
        android:layout_width="270dp"
        android:layout_height="81dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="68dp"
        android:text="Bir Günde Yapabileceğiniz Maksimum   Spor Sürenizi Giriniz"
        android:textAlignment="center"
        android:textColor="#7A0404"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="108dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="386dp"
        android:textAlignment="center"
        android:textColor="#7A0404"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnUp"
        app:layout_constraintStart_toEndOf="@+id/btnDown" />

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="68dp"
        android:layout_height="61dp"


        android:layout_marginStart="67dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="388dp"
        android:background="#7A0404"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtTime"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_rew"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="68dp"
        android:layout_height="61dp"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="388dp"
        android:background="#7A0404"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTime"
        app:srcCompat="@android:drawable/ic_media_ff"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnPoseList"
        android:layout_width="110dp"
        android:layout_height="81dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/nextt"
        app:tint="#7A0404"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/ahdhadss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İlerle"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/btnPoseList"
        app:layout_constraintEnd_toEndOf="@+id/btnPoseList"
        app:layout_constraintStart_toStartOf="@+id/btnPoseList"
        app:layout_constraintTop_toTopOf="@+id/btnPoseList" />

</androidx.constraintlayout.widget.ConstraintLayout>