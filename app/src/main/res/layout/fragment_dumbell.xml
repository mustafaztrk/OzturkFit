<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".DumbellFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-74dp"
        tools:layout_editor_absoluteY="120dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/IBtnFitness"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="47dp"
                android:background="#0E0E0E"
                android:scaleType="center"
                android:src="@drawable/t_mvucut"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView53" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="248dp"
                android:layout_height="40dp"
                android:text="Kaslarını Geliştir "
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/IBtnFitness"
                app:layout_constraintEnd_toEndOf="@+id/IBtnFitness"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="@+id/IBtnFitness"
                app:layout_constraintTop_toTopOf="@+id/IBtnFitness"
                app:layout_constraintVertical_bias="0.725" />

            <ImageButton
                android:id="@+id/IBtnYoga"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="41dp"
                android:background="#0E0E0E"
                android:scaleType="centerCrop"
                android:src="@drawable/yoga"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IBtnFitness"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="257dp"
                android:layout_height="64dp"
                android:text="Ruhunu Dinlendir "
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/IBtnYoga"
                app:layout_constraintEnd_toEndOf="@+id/IBtnYoga"
                app:layout_constraintStart_toStartOf="@+id/IBtnYoga"
                app:layout_constraintTop_toTopOf="@+id/IBtnYoga" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="241dp"
                android:layout_height="45dp"
                android:layout_marginTop="44dp"
                android:text="Bir Antreman Seciniz"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>