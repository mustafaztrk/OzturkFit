<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportsWeekly">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="Haftada Kaç Gün Spor Yapabilirsiniz"
        android:textAlignment="center"
        android:textColor="#7A0404"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/IBtnDown"
        android:layout_width="68dp"
        android:layout_height="61dp"


        android:layout_marginEnd="36dp"
        android:backgroundTint="#7A0404"
        app:layout_constraintBottom_toBottomOf="@+id/txtTimee"
        app:layout_constraintEnd_toStartOf="@+id/txtTimee"
        app:layout_constraintTop_toTopOf="@+id/txtTimee"
        app:srcCompat="@android:drawable/ic_media_rew"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/IBtnUp"
        android:layout_width="68dp"
        android:layout_height="61dp"


        android:layout_marginStart="24dp"
        android:backgroundTint="#7A0404"
        app:layout_constraintStart_toEndOf="@+id/txtTimee"
        app:layout_constraintTop_toTopOf="@+id/txtTimee"
        app:srcCompat="@android:drawable/ic_media_ff"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtTimee"
        android:layout_width="91dp"
        android:layout_height="57dp"
        android:layout_marginTop="180dp"
        android:textAlignment="center"
        android:textColor="#7A0404"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/btnPoseList"
        android:layout_width="110dp"
        android:layout_height="81dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/nextt"
        app:tint="#7A0404" />

    <TextView
        android:id="@+id/ahdhadss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İlerle"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/btnPoseList"
        app:layout_constraintEnd_toEndOf="@+id/btnPoseList"
        app:layout_constraintStart_toStartOf="@+id/btnPoseList"
        app:layout_constraintTop_toTopOf="@+id/btnPoseList" />

</androidx.constraintlayout.widget.ConstraintLayout>