<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportDailyDrink">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="338dp"
        android:layout_height="56dp"
        android:layout_marginTop="87dp"
        android:text="Günlük Ortalama Su Tüketiminizi Seciniz"
        android:textAlignment="center"
        android:textColor="#7A0404"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMore"
        android:layout_width="201dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#7A0404"
        android:text="3 Litreden Fazla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMiddle" />

    <Button
        android:id="@+id/btnLit"
        android:layout_width="201dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#7A0404"

        android:text="1.5 Litreden Az"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnMiddle"
        android:layout_width="201dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#7A0404"
        android:text="1.5-3 Litre Arasında"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLit" />

</androidx.constraintlayout.widget.ConstraintLayout>